<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/Register"
        android:textColor="#FFFFFF"
        android:textSize="56sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edt_username_ahihi_do_ngoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/bg_edt"
        android:drawableLeft="@drawable/baseline_perm_identity_purple_500_36dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="@string/Username"
        android:lines="1"
        android:padding="16dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/bg_edt"
        android:drawableLeft="@drawable/baseline_lock_open_purple_500_36dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="@string/Password"
        android:inputType="textPassword"
        android:lines="1"
        android:padding="16dp" />
    <EditText
        android:id="@+id/edt_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/bg_edt"
        android:drawableLeft="@drawable/baseline_lock_open_purple_500_36dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="@string/ConfirmPassword"
        android:inputType="textPassword"
        android:lines="1"
        android:padding="16dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/demo_selector"
        android:text="@string/Register"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>
</layout>