<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorOnSecondary">#9C27B0</item>
        <item name="colorSecondary">#9C27B0</item>
        <item name="colorControlNormal">#9C27B0</item>
        <item name="android:textColorHighlight">#9C27B0</item>
        <item name="android:textColorHint">#9C27B0</item>
        <item name="colorControlHighlight">#9C27B0</item>
    </style>
</resources>